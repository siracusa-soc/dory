APP = main

APP_SRCS := $(wildcard src/*.c) 

ifndef CORE
CORE=1
else
CORE= $(CORE)
endif

ifeq '$(io)' 'uart'
APP_CFLAGS += -DIO_UART
endif

% if sdk == 'gap_sdk':
APP_CFLAGS += -DNUM_CORES=$(CORE) -DGAP_SDK=1 -Iinc -O3 -w -fno-tree-loop-distribute-patterns -flto
APP_LDFLAGS += -lm -flto
% elif sdk == 'pulp-sdk':
APP_CFLAGS += -DNUM_CORES=$(CORE) -DPULP_SDK=1 -Iinc -O3 -w -fno-tree-loop-distribute-patterns -flto
APP_LDFLAGS += -lm -flto
% endif

FLASH_TYPE ?= HYPERFLASH
RAM_TYPE ?= HYPERRAM
APP_CFLAGS += -DFLASH_TYPE=$(FLASH_TYPE) -DUSE_$(FLASH_TYPE) -DUSE_$(RAM_TYPE)

% if sdk == 'pulp-sdk':
CONFIG_HYPERRAM = 1
CONFIG_HYPERFLASH = 1
% endif

% for i,layer in enumerate(layers_w):
% if i==0:
FLASH_FILES = hex/${layer}
% else:
FLASH_FILES += hex/${layer}
%endif
% endfor
FLASH_FILES += hex/inputs.hex

READFS_FILES := $(FLASH_FILES)
PLPBRIDGE_FLAGS += -f

include $(RULES_DIR)/pmsis_rules.mk

asic:
	openocd -f ./scripts/openocd-ft2232h.cfg &
	riscv32-unknown-elf-gdb -x ../scripts/elf_run.gdb BUILD/SIRACUSA/GCC_RISCV/main/main &